{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug SvelteKit (server + endpoints)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run",
                "dev"
            ],
            "skipFiles": [
                "<node_internals>/**",
                "**/node_modules/**"
            ],
            "console": "integratedTerminal",
            "outputCapture": "std",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}